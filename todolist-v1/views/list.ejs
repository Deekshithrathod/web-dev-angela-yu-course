<!DOCTYPE html>
<html lang="en">
  <%- include('header')-%> 
  <body>
    <div class="box" id="heading">
      <h1 ><%=day%>-List</h1>
      <h1 ><%=listTitle%>-List</h1>
    </div>
    <div class="box">
      <% for(var i=0; i<newListItems.length; i++){ %>
        <div class="item">
          <input type="checkbox" >
          <p><%=newListItems[i]%></p>
        </div>
      <% } %> 

      <form action="/" method="post">
          <input type="text" name="todo" id="todo" placeholder="new item" autocomplete="off" />
          <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
  <%- include('footer')-%> 
    
  </body>
</html>
