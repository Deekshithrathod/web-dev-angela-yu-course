<%- include('partials/header') -%>
<h1>Home</h1>
<p><%= content %></p>
<% if (posts.length > 0) { %>
<% posts.forEach(element => { %>
<h1><%=element.title%></h1>
<p><%=element.body.slice(0, 100) + " ...."%>
  <% const title = element.title; %>
  <% const link = '/posts/'+title.replace(' ','-'); %>
  <a href="<%=link %>">Read More</a>
</p>
<% }) %>
<% } %>
<%- include('partials/footer') -%>